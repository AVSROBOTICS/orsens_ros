<launch>
   <node pkg="orsens" type="orsens_node" name="orsens"  output="screen" respawn="true">
    <param name="capture_mode" value="left_right"/>    
    <param name="color_width" value="640"/>
    <param name="data_path" value="$(find orsens)/data"/>
    <param name="compress_color" value="false"/>
    <param name="publish_left_camera_info" value="true"/>
    <param name="publish_right_camera_info" value="true"/>
    <param name="left_camera_info_url" value="file://$(find orsens)/data/calibration/cal_left_12cm.yml"/>
    <param name="right_camera_info_url" value="file://$(find orsens)/data/calibration/cal_right_12cm.yml"/>
    <param name="camera_namespace" value="/stereo_camera/"/>
    <param name="frame_id" value="stereo_camera"/>    
  </node> 
  	
  	<arg name="pi/2" value="1.5707963267948966" />
    <arg name="optical_rotate" value="0 0 0 -$(arg pi/2) 0 -$(arg pi/2)" />
  	<node pkg="tf" type="static_transform_publisher" name="camera_base_link"
        args="$(arg optical_rotate) base_link stereo_camera 100" />  
  	
  	<!-- Run the ROS package stereo_image_proc -->
	<group ns="/stereo_camera" >
		<node pkg="stereo_image_proc" type="stereo_image_proc" name="stereo_image_proc"/>
		
		<!-- Odometry -->
		<node pkg="rtabmap_ros" type="stereo_odometry" name="stereo_odometry" output="screen">
	  	  	<remap from="left/image_rect"       to="left/image_rect"/>
	  	  	<remap from="right/image_rect"      to="right/image_rect"/>
	  	  	<remap from="left/camera_info"      to="left/camera_info"/>
	  	  	<remap from="right/camera_info"     to="right/camera_info"/>
		  	<remap from="odom" to="odom_stereo"/>
	    
	  	  	<param name="frame_id" type="string" value="base_link"/>
	  	  	<param name="odom_frame_id" type="string" value="odom"/>
	  	  	<param name="approx_sync" type="bool" value="false"/>
	  	  	<param name="queue_size" type="int" value="5"/>

			<param name="Odom/InlierDistance" type="string" value="0.1"/>
	  		<param name="Odom/MinInliers" type="string" value="10"/>
	  		<param name="Odom/RoiRatios" type="string" value="0.03 0.03 0.04 0.04"/>
	  		<param name="Odom/MaxDepth" type="string" value="10"/>
      
	  		<param name="GFTT/MaxCorners" type="string" value="500"/>
	  		<param name="GFTT/MinDistance" type="string" value="5"/>
	  	</node>		
	</group>
  
  <node pkg="image_view" type="disparity_view" name="disparity">
     <remap from="image" to="/stereo_camera/disparity" />
     <param name="autosize" value="true" />
   </node> 

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find orsens)/launch/config/test_odometry.rviz"/>
  
</launch>
